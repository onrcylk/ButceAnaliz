@model ButceAnaliz.Models.Dashboard

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/_Layout2.cshtml";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dashboard</h4>
    <hr />
    <table>
        <tr class="dark">
            <th>@Html.DisplayNameFor(model => model.GelenToplamTutar)</th>
            <th>@Html.DisplayNameFor(model => model.GidenToplamTutar)</th>
            <th>@Html.DisplayNameFor(model => model.ToplamTutar)</th>
            <th>@Html.DisplayNameFor(model => model.KayitTarihi)</th>
        </tr>
        <tr class="accent-blue">
            <td>@Html.DisplayFor(model => model.GelenToplamTutar)</td>
            <td>@Html.DisplayFor(model => model.GidenToplamTutar)</td>
            <td>@Html.DisplayFor(model => model.ToplamTutar)</td>
            <td>@Html.DisplayFor(model => model.KayitTarihi)</td>
        </tr>
      
    </table>
   
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
